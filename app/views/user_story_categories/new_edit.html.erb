<div class="header">
    <b><%= controller.action_name.capitalize %> User Story Category</b>
</div>

<div style="padding-left:50px;padding-top:25px">

<% form_for(@user_story_category) do |f| %>
    <div class="error_messages"><%= f.error_messages %></div>

    <b><%=  f.label :name %>:</b>
    <%=  f.text_field :name, :size => 25 %>

    <p><%= f.submit "Save" %></p>
<% end %>

<%= link_to 'Show', @user_story_category %> |
<%= link_to 'Back', user_story_categories_path %>

</div>
