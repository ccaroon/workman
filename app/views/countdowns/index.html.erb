<div class="header">
    <b>Countdowns</b>
</div>
<p>

<table class="list" width="100%">
  <tr>
    <th>Preview</th>
    <th>Target Date</th>
    <th>On Homepage</th>
    <th>Actions</th>
  </tr>

<% @countdowns.each do |countdown| %>
  <tr class="<%= cycle('row_even','row_odd') %>">
    <td><%= countdown.to_html %></td>
    <td><%=h countdown.target_date.strftime("%b %d, %Y %I:%M:%S %p") %></td>
    <td><%=h countdown.on_homepage ? 'Yes' : 'No' %></td>
    <td>
        <%= link_to image_tag('themes/default/show.png', {:border => 0}), countdown %>
        <%= link_to image_tag('themes/default/edit.png', {:border => 0}), edit_countdown_path(countdown) %>
        <%= link_to image_tag('themes/default/delete.png', {:border => 0}), countdown, :confirm => "Delete Countdown titled '#{countdown.title}'?", :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New', new_countdown_path %>
